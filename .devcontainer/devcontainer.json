{
  "name": "Chimuelo ROS 2 Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-python.python",
        "ms-iot.vscode-ros",
        "foxglove.vscode-foxglove"
      ]
    }
  },
  "runArgs": [
    "-p", "8765:8765",
    "--init",
    "--ipc=host"
  ],
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace/chimuelo,type=bind"
  ],
  "workspaceFolder": "/workspace/chimuelo",
  "postCreateCommand": ". /opt/ros/humble/setup.bash && colcon build",
  "remoteUser": "root"
}
